       cur = base::FilePath(kFilepathSinglePrefExtensions);
       break;
     }
@@ -559,6 +568,10 @@
 #else
       cur = base::FilePath(FILE_PATH_LITERAL(
           "/etc/chromium/native-messaging-hosts"));
