Description: Prefer a /usr/share directory named after the package if it
  exists.
Author: Chad Miller <chad.miller@canonical.com>

Index: iridium-browser/chrome/common/chrome_paths.cc
===================================================================
--- iridium-browser.orig/chrome/common/chrome_paths.cc	2015-02-02 15:02:32.000000000 +0100
+++ iridium-browser/chrome/common/chrome_paths.cc	2015-02-02 15:02:59.000000000 +0100
@@ -91,6 +91,8 @@
 #else
     FILE_PATH_LITERAL("/usr/share/chromium/extensions");
 #endif  // defined(GOOGLE_CHROME_BUILD)
+const base::FilePath::CharType kFilepathSinglePrefExtensionsNew[] =
+    FILE_PATH_LITERAL("/usr/share/chromium-browser/extensions");
 #endif  // defined(OS_LINUX)
 
 static base::LazyInstance<base::FilePath>
@@ -467,6 +469,9 @@
       cur = base::FilePath(FILE_PATH_LITERAL("/etc/opt/chrome/policies"));
